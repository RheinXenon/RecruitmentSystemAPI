{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File (with Virtual Env)",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}